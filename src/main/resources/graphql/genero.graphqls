type Genero {
  idGenero: ID!
  nome: String!
  situacao: String!
  filmes: [Filme]
}

input GeneroRequest {
  nome: String!
}

type GeneroResponse {
  idGenero: ID!
  nome: String!
  situacao: String!
  filmes: [FilmePorGeneroResponse]
}

type Query {
  pesquisarGeneros: [GeneroResponse]!
  obterGenero(idGenero: ID!): GeneroResponse!
}

type Mutation {
  criarGenero(input: GeneroRequest!): GeneroResponse!
}
